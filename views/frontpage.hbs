<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Students</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        h1 {
            color: #333;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        thead {
            background-color: #333;
            color: #fff;
        }

        th, td {
            padding: 10px;
            text-align: left;
            border: 1px solid #ddd;
        }

        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        #carouselExampleControls {
            margin-top: 20px;
        }

        .carousel-item img {
            height: 300px; /* Adjust the height as needed */
            object-fit: cover;
            width: 100%;
        }
    </style>
</head>
<body>
    {{> navbar}}
    
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="https://nitjsr.ac.in/backend/uploads/banner/add/d5dc67bc-12b6-4b43-9b7e-a2b1559bdfbb-IMG-20231021-WA0005.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="https://nitjsr.ac.in/backend/uploads/banner/add/5276f1d7-95d6-4782-81fa-b25ba86bd912-July%2015th%202023.jpeg" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="..." alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="container">
        <h1>All Students</h1>

        <form id="branchFilterForm">
            <label for="branch">Filter by Branch:</label>
            <select id="branch" name="branch" onchange="filterStudents()">
                <option value="">All Branches</option>
                <option value="Branch1">Branch1</option>
                <option value="Branch2">Branch2</option>
                <!-- Add more branches as needed -->
            </select>
        </form>

        <table border="1" id="studentsTable">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Registeration No.</th>
                    <th>Batch</th>
                    <th>Branch</th>
                    <th>Current Semester</th>
                    <th>Total Marks</th>
                    <th>Marks Percentage</th>
                </tr>
            </thead>
            <tbody>
                {{#each students}}
                    <tr>
                        <td>{{this.name}}</td>
                        <td>{{this.studentId}}</td>
                        <td>{{this.email}}</td>
                        <td>{{this.branch}}</td>
                        <td>{{this.CurrentSem}}</td>
                        <td>{{this.totalmarks}}</td>
                        <td>{{this.percentage}}</td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

    <script>
        function filterStudents() {
            const branchFilter = document.getElementById('branch').value;
            const studentsTable = document.getElementById('studentsTable');
            const rows = studentsTable.getElementsByTagName('tr');

            for (let i = 1; i < rows.length; i++) {
                const branchCell = rows[i].getElementsByTagName('td')[3];
                const showRow = branchFilter === '' || branchFilter === branchCell.innerHTML;
                rows[i].style.display = showRow ? '' : 'none';
            }
        }

        function calculatePercentage(totalMarks) {
            // Assuming maximum possible marks is 100
            const maxMarks = 100;
            const percentage = (totalMarks / maxMarks) * 100;
            return percentage.toFixed(2) + '%';
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
