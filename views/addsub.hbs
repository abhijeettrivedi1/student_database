<!-- subjectForm.hbs -->

<!DOCTYPE html>
<html>
<head>
    <title>Subject Registration Form</title>
    <style>
        /* Your existing styles go here */
    </style>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            position: relative;
            background-image: url('https://infopeedia.com/wp-content/uploads/2022/08/ElO-XOfU0AEeZi6-scaled.jpeg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            margin: 0; /* Remove default margin */
            height: 100vh; /* Set height to 100% of viewport */
        }

        body::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(255, 255, 255, 0.7); /* Adjust the alpha value for the desired level of transparency */
        }

        .content {
            position: fixed;
            padding: 18px;
            margin: 4px;
            top: 100px;
            left: 240px; /* Adjust the left margin as needed */
            width: 600px; /* Increase the width as needed */
            border: 2px solid #61b81e;
            border-radius: 25px;
            box-shadow: 3px 5px #61b81e;
            background-color: rgba(255, 255, 255, 0.8); /* Adjust the alpha value for the desired level of transparency */
        }

        font {
            font-size: 24px;
            color: #61b81e;
        }

        form {
            margin-top: 20px;
        }

        button {
            background-color: #61b81e;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
        }

        button:hover {
            background-color: #195138;
        }
        .content input[type="reset"] {
            font-size: 20px;
            text-align: center;
            float: center;
            padding: 8px;
            width: 120px;
            border: 1px solid #61b81e;
            border-radius: 20px;
            background-color: white;
            color: ##61b81e;
            cursor: pointer;
        }

        .content input[type="reset"]:hover {
            color: white;
            background-color: #61b81e;
        }
    </style>
</head>
<body>
    {{> navbar}}
   
    <div class="content">
    <font><b>Add Subject</b></font><br><br>
    <form action="/addsubj" method="POST"  onsubmit="return validateForm()">

        <b>Subject Name</b><br>
        <input type="text" name="subject" placeholder="Enter subject name" required><br><br>

        <b>Subject Code</b><br>
        <input type="text" name="subjectcode" placeholder="Enter subject code" required><br><br>

        <b>Branch</b><br>
        <input type="text" name="branch" placeholder="Enter branch name" required><br><br>

        <b>Semester</b><br>
        <input type="text" name="CurrentSem" placeholder="Enter semester" required><br><br>

        <button type="submit" name="submit" value="Register">Submit</button>
        <input type="reset" name="reset" value="Cancel" onclick="myFunction()">
    </form>
    {{#if message}}
        <p>{{message}}</p>
        {{/if}}
</div>

    <script type="text/javascript">
        function myFunction() {
            alert("Subject Registration Cancelled!");
        }

        function validateForm() {
            // You can add validation logic if needed
            return true;
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
